
@{
    ViewBag.Title = "ListByCategory";
}

<h2>List By Category</h2>



<table>
    @foreach (var c in ViewBag.ListOfCategories)
    {
        <tr>
            <td> @c.CategoryId   </td>
            <td> @c.CategoryName </td>
            <td> @c.Description  </td>
        </tr>
    }
</table>


