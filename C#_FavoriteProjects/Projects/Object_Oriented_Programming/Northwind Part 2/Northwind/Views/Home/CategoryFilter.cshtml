@model Northwind.Models.Category

@{
    ViewBag.Title = "Category Filter";
}

	<head>
		<link type="text/css" rel="stylesheet" href="~/Content/style.css" />
		<script src="~/Scripts/jquery-2.1.1.min.js"></script>
		<script type="text/javascript" src="~/Scripts/javascript-style.js"></script>
		<title>Category Index</title>

	</head>
		<!--	By Files All list -->
		<h2>CategoryFilter</h2>
		<!--	By Category		-->
			<table border="1">
				@foreach(var c in ViewBag.Categories)
				{
					<tr class="something">
						<td>
							<a href="ByCategory?id=@c.CategoryId">
								@c.CategoryName
							</a>
						</td>
					</tr>
				}
			</table>